extends ../_layouts/base

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../';

block content
    header.header
        .header__logo-q8.wow.fadeInLeft Q8
        .header__logo-audi.wow.fadeInRight
            img(src="/images/audi-logo.png")

    main.conuntdown
        section.countdown__hero
            video(width="100%" height="100%" autoplay loop)
                source(type="video/mp4" src="/images/countdown-hero.mp4")
        section.countdown__clock
            .container
                .row
                    .col-24
                        h2.countdown__clock__title Muy pronto podrás reseervar el nuevo Q8.
                        .countdown__clock__wrapper
                            .countdown__clock__group
                                span.countdown__clock__number.js-days 10
                                span.countdown__clock__label Días
                            .countdown__clock__group
                                span.countdown__clock__number.js-hours 14
                                span.countdown__clock__label Horas
                            .countdown__clock__group
                                span.countdown__clock__number.js-minutes 36
                                span.countdown__clock__label Minutos
                            .countdown__clock__group
                                span.countdown__clock__number.js-seconds 56
                                span.countdown__clock__label Segundos

    footer.footer
        ul.footer__nav
            li
                a(href="#") Condiciones de Uso
            li
                a(href="#") Políticas de privacidad
        
        .footer__copy
            p © 2019. Audi Chile. Todos los derechos reservados

